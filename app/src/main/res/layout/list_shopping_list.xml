<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:id="@+id/list_shopping_list_layout"
    android:background="@drawable/recycler_background">

    <TextView
        android:id="@+id/list_shopping_list_listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/shopping_list_name"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_shopping_list_CreatedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/created_by"
        android:layout_below="@+id/list_shopping_list_listName"
        android:paddingTop="5dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/list_shopping_list_listOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_shopping_list_CreatedBy"
        android:layout_toEndOf="@+id/list_shopping_list_CreatedBy"
        android:text="Name"
        android:layout_below="@+id/list_shopping_list_listName"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/list_shopping_list_dateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd/mm/yy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_shopping_list_listName"
        android:paddingTop="5dp"
        android:textSize="12sp"/>

</RelativeLayout>